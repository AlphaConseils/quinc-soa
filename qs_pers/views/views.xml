<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherited" model="ir.ui.view">
            <field name="name">sale.order.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <field name="company_id" position="replace">
                    <field name="mobil_name_sale"/>
                    <field name="email_sale"/>
                </field>
                <field name="activity_ids" position="replace">
                    <field name="activity_ids" string="Raison de perte" widget="list_activity" optional="show"/>
                </field>

            </field>
        </record>

        <record id="view_sale_tree_inherited" model="ir.ui.view">
            <field name="name">sale.view_order_tree.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="replace">
                    <field name="mobil_name_sale"/>
                    <field name="email_sale"/>
                </field>

            </field>
        </record>


        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">base.view_partner_form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="compute_field" invisible="1"/>
                    <field name="credit_limit" attrs="{'readonly': [('compute_field', '=', True)]}"
                           groups="sales_team.group_sale_manager"/>
                </field>
                <field name="property_payment_term_id" position="replace">
                    <field string="Payment Terms" name="property_payment_term_id"
                           attrs="{'readonly': [('compute_field', '=', True)]}"
                           options="{'no_open': True, 'no_create': True}" can_create="true" can_write="true"
                           modifiers="{}" groups="sales_team.group_sale_manager"/>
                </field>
                <field name="property_product_pricelist" position="attributes">
                    <attribute name="groups">sales_team.group_sale_manager</attribute>
                </field>
            </field>
        </record>

